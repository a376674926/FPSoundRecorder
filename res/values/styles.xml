<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="line_horizontal">
        <item name="android:background">@drawable/mms_main_divider</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1.0dip</item>
    </style>

    <style name="mms_list_time_style">
        <item name="android:textSize">30.0sp</item>
        <item name="android:textColor">@drawable/textcolor_selector</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">5.0dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="mms_main_index_style">
        <item name="android:textSize">@dimen/text_size_45</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/mms_main_index_text_bg</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="mms_main_item_style">
        <item name="android:textSize">@dimen/text_size_45</item>
        <item name="android:textColor">@drawable/textcolor_selector</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">3.0dip</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="myTransparent" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowBackground">@color/transparent_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

</resources>