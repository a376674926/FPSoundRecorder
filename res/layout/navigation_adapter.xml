<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_background_selector"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="6.0dip"
    android:paddingTop="6.0dip"
    android:splitMotionEvents="false" >

    <ImageView
        android:id="@+id/record_file_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="6.0dip"
        android:layout_marginStart="6.0dip"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4.0dip"
        android:layout_marginStart="2.0dip"
        android:splitMotionEvents="false" >

        <TextView
            android:id="@+id/file_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@drawable/textcolor_selector"
            android:textDirection="5"
            android:textSize="28.0sp" />

        <TextView
            android:id="@+id/record_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/file_name"
            android:singleLine="true"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@drawable/textcolor_selector"
            android:textDirection="5"
            android:textSize="20.0sp" />

        <TextView
            android:id="@+id/record_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/file_name"
            android:singleLine="true"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@drawable/textcolor_selector"
            android:textDirection="5"
            android:textSize="20.0sp" />
    </RelativeLayout>

</LinearLayout>